<?xml version="1.0" encoding="utf-8" ?>

<log4net>

  <appender name="SAF.ConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.SimpleLayout"/>
  </appender>

  <appender name="SAF.FileAppender1" type="log4net.Appender.RollingFileAppender">
    <file value="./log/SAF_log1.log"/>
    <appendToFile value="true"/>

    <maximumFileSize value="1MB"/>
    <maxSizeRollBackups value="10"/>

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%5p [%5t] %c{3} (%F:%L) %d{ISO8601} - %m%n"/>
    </layout>
  </appender>

  <appender name="SAF.FileAppender2" type="log4net.Appender.RollingFileAppender">
    <file value="./log/SAF_log2.log"/>
    <appendToFile value="true"/>

    <maximumFileSize value="1MB"/>
    <maxSizeRollBackups value="10"/>

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%5p [%5t] %c{3} (%F:%L) %d{ABSOLUTE} - %m%n"/>
    </layout>
  </appender>

  <appender name="SAF.FileAppender3" type="log4net.Appender.RollingFileAppender">
    <file value="./log/SAF_log3.log"/>
    <appendToFile value="true"/>

    <maximumFileSize value="1MB"/>
    <maxSizeRollBackups value="10"/>

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%5p [%5t] %c{3} (%F:%L) %d{ABSOLUTE} - %m%n"/>
    </layout>
  </appender>

  <logger name="SAF_Client.Logger" additivity="true">
    <level value="all"/>
    <appender-ref ref="SAF.FileAppender1"/>
  </logger>

  <logger name="SAF_Client2.Logger" additivity="true">
    <level value="all"/>
    <appender-ref ref="SAF.FileAppender2"/>
  </logger>

  <logger name="SAF_Client3.Logger" additivity="true">
    <level value="warn"/>
    <appender-ref ref="SAF.FileAppender3"/>
  </logger>

  <root>
    <priority value="warn"/>
    <appender-ref ref="SAF.ConsoleAppender"/>
    <!-- <appender-ref ref="SAF.FileAppender1"/> -->
  </root>

</log4net>
